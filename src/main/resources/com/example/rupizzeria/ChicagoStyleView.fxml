<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.ComboBox?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.ListView?>
<?import javafx.scene.control.RadioButton?>
<?import javafx.scene.control.ToggleGroup?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.text.Text?>

<AnchorPane prefHeight="400.0" prefWidth="600.0" xmlns="http://javafx.com/javafx/19" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.example.rupizzeria.ChicagoStyleController">
   <children>
      <HBox layoutX="29.0" layoutY="95.0" prefHeight="25.0" prefWidth="206.0" spacing="15.0">
         <children>
            <RadioButton fx:id="smallRadioButton" mnemonicParsing="false" onMouseClicked="#updateSize" selected="true" text="Small">
               <toggleGroup>
                  <ToggleGroup fx:id="size" />
               </toggleGroup>
            </RadioButton>
            <RadioButton fx:id="mediumRadioButton" mnemonicParsing="false" onMouseClicked="#updateSize" text="Medium" toggleGroup="$size" />
            <RadioButton fx:id="largeRadioButton" mnemonicParsing="false" onMouseClicked="#updateSize" text="Large" toggleGroup="$size" />
         </children>
      </HBox>
      <HBox alignment="CENTER_LEFT" layoutX="256.0" layoutY="64.0" prefHeight="32.0" prefWidth="200.0" spacing="2.0">
         <children>
            <Text strokeType="OUTSIDE" strokeWidth="0.0" text="Pizza Price: $" />
            <Label fx:id="priceLabel" text="0.00" />
         </children>
      </HBox>
      <ListView fx:id="allToppingsList" layoutX="57.0" layoutY="149.0" prefHeight="200.0" prefWidth="200.0" />
      <ListView fx:id="addedToppingsList" layoutX="300.0" layoutY="149.0" prefHeight="200.0" prefWidth="200.0" />
      <Button fx:id="addButton" layoutX="256.0" layoutY="200.0" mnemonicParsing="false" onAction="#addTopping" text="Add" />
      <Button fx:id="removeButton" layoutX="249.0" layoutY="249.0" mnemonicParsing="false" onAction="#removeTopping" text="Remove" />
      <HBox alignment="CENTER_LEFT" layoutX="275.0" layoutY="104.0" prefHeight="32.0" prefWidth="200.0" spacing="2.0">
         <children>
            <Text strokeType="OUTSIDE" strokeWidth="0.0" text="Crust:" />
            <Label fx:id="crustLabel" text="N/A" />
         </children>
      </HBox>
      <ComboBox fx:id="flavorComboBox" layoutX="47.0" layoutY="39.0" onAction="#getFlavor" prefWidth="150.0" promptText="FLAVOR" />
      <Button fx:id="addToOrderButton" layoutX="456.0" layoutY="27.0" mnemonicParsing="false" onAction="#addToOrder" text="Add To Order" />
   </children>
</AnchorPane>
